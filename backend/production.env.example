# ===========================================
# CONFIGURAZIONE PRODUZIONE INDUSTRACE
# ===========================================

# Database
DATABASE_URL=postgresql://industrace_user:secure_password@db:5432/industrace_prod

# JWT Authentication
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ISSUER=industrace-api-prod
JWT_AUDIENCE=industrace-client-prod

# Upload Settings
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# Audit Log
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# CORS - Configura per il tuo dominio
CORS_ORIGINS=https://industrace.example.com,https://www.industrace.example.com

# Environment
ENVIRONMENT=production
DEBUG=false

# Cookie Settings
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# ===========================================
# CONFIGURAZIONE API ESTERNE
# ===========================================

# OpenAPI Security
API_KEY_HEADER=X-API-Key
API_KEY_LENGTH=32
API_KEY_PREFIX=ind_

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_STRICT=10/minute

# API Versioning
API_VERSION=v1
API_TITLE=Industrace API
API_DESCRIPTION=Configuration Management Database per sistemi Industrial Control Systems

# External API Settings
EXTERNAL_API_ENABLED=true
EXTERNAL_API_DOCS_ENABLED=true

# ===========================================
# SICUREZZA AGGIUNTIVA
# ===========================================

# HTTPS (impostare in produzione)
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Rate Limiting Redis (opzionale per produzione)
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/industrace.log 