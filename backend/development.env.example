# ===========================================
# CONFIGURAZIONE SVILUPPO INDUSTRACE
# ===========================================

# Database
DATABASE_URL=postgresql://user:password@localhost/cmdb

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ISSUER=industrace-api-dev
JWT_AUDIENCE=industrace-client-dev

# Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Pagination
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# Audit Log
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365

# CORS - Configura per sviluppo
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Environment
ENVIRONMENT=development
DEBUG=true

# Cookie Settings
SECURE_COOKIES=false
SAME_SITE_COOKIES=lax

# ===========================================
# CONFIGURAZIONE API ESTERNE
# ===========================================

# OpenAPI Security
API_KEY_HEADER=X-API-Key
API_KEY_LENGTH=32
API_KEY_PREFIX=ind_

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_STRICT=10/minute

# API Versioning
API_VERSION=v1
API_TITLE=Industrace API
API_DESCRIPTION=Configuration Management Database per sistemi Industrial Control Systems

# External API Settings
EXTERNAL_API_ENABLED=true
EXTERNAL_API_DOCS_ENABLED=true 